<Page x:Class="tamrin_6_2_final.pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tamrin_6_2_final"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="Login"
      Background="Gray">

    <Border CornerRadius="20" Background="White" Margin="50,90,50,50">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TabControl Grid.Column="1" Style="{StaticResource tabControl}">
                <TabItem Style="{StaticResource tabItem}"  Width="100" Content="sdad" Margin="0,-2,0,-6"></TabItem>
                <TabItem Style="{StaticResource tabItem}" Margin="0,-2,-39,-6">dsad</TabItem>
            </TabControl>
        </Grid>

    </Border>
</Page>
