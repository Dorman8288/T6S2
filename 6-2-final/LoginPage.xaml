<Page x:Class="tamrin_6_2_final.pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tamrin_6_2_final"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="Login"
      Background="{StaticResource BackGroundBrush}">

    <Border CornerRadius="20" Background="#D0DDEA" Margin="50,90,50,50">
        <TabControl Margin="0,-2,0,0" Grid.Column="1" Style="{StaticResource tabControl}">
            <TabItem Margin="5,0,-25,0" Style="{StaticResource tabItem}" Width="60" Header="Seller" >1</TabItem>
            <TabItem Margin="5,0,-35,0" Style="{StaticResource tabItem}" Width="60" Header="Customer" >2</TabItem>
            <TabItem Margin="5,0,-45,0" Style="{StaticResource tabItem}"  Width="60" Header="Teacher">3</TabItem>
            <TabItem Margin="5,0,-65,0" Style="{StaticResource tabItem}" Width="60" Header="Student" >4</TabItem>
        </TabControl>
    </Border>
</Page>
