<Window x:Class="tamrin_6_2_final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tamrin_6_2_final"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400"
        Background="Gray">
    <Border CornerRadius="20" Background="White" Margin="50,90,50,50">
        <TabControl x:Name="AdminTab" Margin="151,0,151,36" Grid.RowSpan="2" Grid.Row="2" Visibility="Visible" SelectionChanged="AdminTab_SelectionChanged" >
            <TabItem>
                <WrapPanel>
                    <TextBox x:Name="email" Background="AliceBlue" Height="20" Width="450"/>
                    <Button x:Name="Back" Content="Back" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Background ="DarkKhaki"  Height="20" Width="40" Click="Back_Click"/>
                    <TextBlock Text="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Height="30" Width="60" FontSize="20"/>
                </WrapPanel>
            </TabItem>
        </TabControl>
    </Border>
</Window>
